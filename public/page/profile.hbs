                    </div>
                    <div class="product-box">
                        <div class="img-box">
                            <img src="../img/topbottom/ico-instagram.png" alt="">
                        </div>
                    </div>
                </div>
                <div class="review-box">
                    <div class="input-box">
                        <select name="" id="">
                            <option value="">별점 선택</option>
                            <option value="1">★☆☆☆☆</option>
                            <option value="2">★★☆☆☆</option>
                            <option value="3">★★★☆☆</option>
                            <option value="4">★★★★☆</option>
                            <option value="4">★★★★★</option>
                            <option value="5"></option>
                        </select>
                        <input type="text">
                        <button>작성</button>
                    </div>
                    {{#each reviewData.dataValues.receiveReviews}}
                        <div class="reply-box">
                            <div class="left">
                                <div class="reviewer-box">
                                    <h6>
                                        <img src={{concat "/uploads/" dataValues.writerId.dataValues.profileImg}} alt="">
                                    </h6>
                                    <h6>닉네임</h6>
                                </div>
                                <div class="rating-box">
                                    <div class="flex-box">
                                        <h6>{{starCount dataValues.star}}</h6>
                                        <h6>{{formDate dataValues.createdAt}}</h6>   
                                    </div>
                                    <h6>{{dataValues.reviewComment}}</h6>
                                </div>
                            </div>
                            <div class="right">
                                <div class="img-box">
                                </div>
                            </div>
                        </div>
                        {{#each dataValues.receiveReply}}
                        <div class="under-reply-box">
                            <div class="seller-ifo">
                                <h6>↩︎</h6>
                                <h6 >
                                    <img src={{concat "/uploads/" sellerId.dataValues.profileImg}} alt="">
                                </h6>
                                <h6>닉네임</h6>
                                <h6>{{formDate dataValues.createdAt}}</h6>
                            </div>
                            <p class="seller-content">
                                {{dataValues.replyComment}}
                            </p>
                        {{/each}}
                    </div>
                    {{/each}}
                    <div class="reply-box">
                        <div class="left">
                            <div class="reviewer-box">
                                <h6>
                                    <img src="../img/login/image.png" alt="">
                                </h6>
                                <h6>닉네임</h6>
                            </div>
                            <div class="rating-box">
                                <div class="flex-box">
                                    <h6>★☆★☆★</h6>
                                    <h6>2024. 7. 16</h6>   
                                </div>
                                <h6>좋은 배송 감사합니다~</h6>
                            </div>
                        </div>
                        <div class="right">
                            <div class="img-box">
